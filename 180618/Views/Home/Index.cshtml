<div id="app">
    <div class="row">
        <div class="col-md-6 col-md-offset-3">
            <div class="input-group">
                <input type="text" class="form-control" v-model="min" placeholder="Minimum Number" />
                <span class="input-group-addon">-</span>
                <input type="text" class="form-control" v-model="max" placeholder="Maximum Number" />
            </div>
            <br /><br />
            <button class="btn btn-info" v-on:click="randomNumClick">Add Random Number</button>
            <button class="btn btn-warning" v-on:click="sortClick">Sort Numbers</button>
            <br /><br />
            <ul>
                <template v-for="number in numbers">
                    <li style="font-size: 20px;">{{number}}</li>
                </template>
            </ul>
        </div>
    </div>

</div>

@section scripts {
    <script src="/Scripts/vue.js"></script>
    <script src="/Scripts/index.js"></script>
}
